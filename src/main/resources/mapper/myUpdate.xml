<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="myUpdate">

	<select id="mySelect" resultType="MEMBER" parameterType="int">
		SELECT * FROM USERS
		WHERE ID = #{id}
	</select>
	
	<update id="myUpdate" parameterType="Member">
		UPDATE USERS
		SET NICKNAME = #{nickname},
			EMAIL = #{email},
			PHONE = #{phone},
			<if test="password != null">
				PASSWORD = #{password}
			</if>
		WHERE ID = #{id}
	</update>
</mapper>